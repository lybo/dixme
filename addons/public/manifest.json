{
  "manifest_version": 2,
  "name": "Dixme",
  "version": "0.0.1",
  "author": "Unknown",
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "scripts": [
      "js/addons-background-script.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/addons-content-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon-16.png",
    "default_title": "Open the Create React WebExtension User Guide",
    "default_popup": "addons-popup.html"
  },
  "web_accessible_resources": [
    "media/*"
  ],
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs"
  ]
}
